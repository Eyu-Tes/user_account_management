<form action="/account/login" method="POST" novalidate id="signin-form">
    <h3 class="mb-4 pb-2 border-bottom">Sign In</h3>
    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" name="email" id="email" value="{{email}}" class="form-control" autofocus>
    </div>
    <div class="form-group">
        <label for="password">Password</label>
        <input type="password" name="password" id="password" class="form-control">
    </div>
    <input type="submit" value="Login" class="btn btn-block btn-secondary mt-4">
</form>
