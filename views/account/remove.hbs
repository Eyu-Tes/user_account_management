<form action="/account/delete" method="POST" novalidate class="form">
    <h3 class="mb-5" style="color: #f44336">
        <i class="fas fa-exclamation-triangle"></i> Delete Account Confirmation
    </h3>

    <h5><big class="text-primary">{{username}}</big>, are you sure you want to delete your account?</h5>

    <br>
    <p class="text-muted">warning: this cannot be undone</p>

    <div class="d-flex my-5">
        <input type="submit" value="Delete" class="btn btn-danger mr-3"></input>
        <a href="/account" class="btn btn-secondary">Cancel</a>
    </div>
</form>
